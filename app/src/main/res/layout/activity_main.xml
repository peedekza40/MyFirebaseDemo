<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imageView"
                android:scaleType="fitCenter" android:layout_marginTop="160dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center|top">
            <Button
                    android:text="Basic (No Auth)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_no_auth"
                    style="@android:style/Widget.DeviceDefault.Button"/>
            <Button
                    android:text="Advance (Auth)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_auth"
                    style="@style/Widget.AppCompat.Button.Colored"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>